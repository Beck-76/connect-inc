<body>

<div id="chat-container" role="main" aria-label="Chat Room">
  <header>Chat Room</header>
  <div id="messages" aria-live="polite" aria-relevant="additions"></div>
  <form id="chat-form" aria-label="Send message">
    <input id="message-input" type="text" placeholder="Type your message..." autocomplete="off" aria-required="true" />
    <button type="submit" aria-label="Send message">Send</button>
  </form>
</div>

<script>
  const messagesDiv = document.getElementById('messages');
  const form = document.getElementById('chat-form');
  const input = document.getElementById('message-input');

  // Function to add message to chat window
  function addMessage(text, user = false) {
    const msgDiv = document.createElement('div');
    msgDiv.classList.add('message');
    if(user) msgDiv.classList.add('user');
    msgDiv.textContent = text;
    messagesDiv.appendChild(msgDiv);
    messagesDiv.scrollTop = messagesDiv.scrollHeight;
  }

  // Simulated bot replies
  const botReplies = [
    "Hello! Welcome to the chat.",
    "How can I help you today?",
    "Feel free to discuss anything civic-related!",
    "Remember to be respectful and kind.",
    "Have you visited the House or Senate pages?",
    "Thanks for chatting with us!"
  ];

  // On form submit
  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const msg = input.value.trim();
    if(!msg) return;

    addMessage(msg, true);
    input.value = '';

    // Simulate bot reply after short delay
    setTimeout(() => {
      const reply = botReplies[Math.floor(Math.random() * botReplies.length)];
      addMessage(reply);
    }, 900);
  });

  // Welcome message on load
  window.addEventListener('load', () => {
    addMessage("Welcome to the Power to the People chat room!");
  });
</script>

</body>
