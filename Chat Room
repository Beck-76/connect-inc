  <script>
    const chatBox = document.getElementById('chatBox');
    const messageInput = document.getElementById('messageInput');

    function sendMessage() {
      const message = messageInput.value.trim();
      if (message !== '') {
        addMessage('You', message);
        messageInput.value = '';
        chatBox.scrollTop = chatBox.scrollHeight;

        // Simulate bot reply after delay
        setTimeout(() => {
          botReply(message);
        }, 900);
      }
    }

    function addMessage(sender, text) {
      const messageEl = document.createElement('div');
      messageEl.className = 'chat-message';
      messageEl.innerHTML = `<strong>${sender}:</strong> ${text}`;
      chatBox.appendChild(messageEl);
      chatBox.scrollTop = chatBox.scrollHeight;
    }

    function botReply(userMessage) {
      const msg = userMessage.toLowerCase();
      let reply = "";

      // Enhanced responses with patriotic flair
      if (msg.includes("hello") || msg.includes("hi")) {
        reply = "Hello, fellow citizen! ğŸ‡ºğŸ‡¸ How can I assist you in your civic journey today?";
      } else if (msg.includes("how do i contact") || msg.includes("reach my senator")) {
        reply = "You can contact your senator through the Senate pageâ€”just click 'Contact Your Senator'! ğŸ‡ºğŸ‡¸";
      } else if (msg.includes("house") || msg.includes("representative")) {
        reply = "Representatives serve in the House to voice the will of the people. ğŸ›ï¸ Want to view current House bills?";
      } else if (msg.includes("vote") || msg.includes("register")) {
        reply = "Fantastic! Every vote counts. Use the 'Register to Vote Federally' link on our homepage to get started. ğŸ—³ï¸";
      } else if (msg.includes("who are you")) {
        reply = "I'm CivBot ğŸ¤–, your patriotic assistant here to help you navigate Congress, voting, and civic resources.";
      } else if (msg.includes("thank you") || msg.includes("thanks")) {
        reply = "You're welcome, citizen! ğŸ‡ºğŸ‡¸ United we stand!";
      } else if (msg.includes("president") || msg.includes("trump")) {
        reply = "Donald J. Trump is the current President. You can find more on the homepage under 'Current Leadership'. ğŸ‡ºğŸ‡¸";
      } else {
        reply = "Liberty and learning go hand in hand. ğŸ—½ Ask me about contacting leaders, voting, or U.S. governance!";
      }

      addMessage("CivBot ğŸ¤–", reply);
    }

    messageInput.addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        sendMessage();
      }
    });
  </script>
