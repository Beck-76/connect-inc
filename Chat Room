  <script>
    window.onload = function() {
      if (!localStorage.getItem("party")) {
        document.getElementById("partyModal").style.display = "flex";
      } else {
        if (!localStorage.getItem("signedUp")) {
          document.getElementById("signupModal").style.display = "flex";
        } else {
          document.getElementById("signupTitle").innerText = "Sign In";
          document.getElementById("signupModal").style.display = "flex";
        }
      }
    };

    function storeParty() {
      const party = document.getElementById("partySelect").value;
      if (party) {
        localStorage.setItem("party", party);
        closeModal('partyModal');
        document.getElementById("signupModal").style.display = "flex";
      }
    }

    function closeModal(id) {
      document.getElementById(id).style.display = "none";
    }

    function submitSignup() {
      const name = document.getElementById("nameInput").value;
      const email = document.getElementById("emailInput").value;
      if (name && email) {
        localStorage.setItem("signedUp", "true");
        closeModal('signupModal');
      } else {
        alert("Please fill out all fields.");
      }
    }

    function scrollToLeadership() {
      document.querySelector('.leadership').scrollIntoView({behavior: "smooth"});
    }

    function toggleDarkMode() {
      document.body.classList.toggle("dark-mode");
    }

    function changePersonality() {
      const type = document.getElementById("personality").value;
      const text = document.getElementById("civbotText");
      switch (type) {
        case "formal":
          text.innerText = "Greetings. I am CivBot. Please indicate how I may assist you in navigating civic information.";
          break;
        case "friendly":
          text.innerText = "Hey there! Iâ€™m CivBot ðŸ˜Š What would you like to know about your government today?";
          break;
        case "educational":
          text.innerText = "Welcome! Iâ€™m CivBot. Letâ€™s explore how our government works together!";
          break;
      }
    }
  </script>
