  <!-- Login Modal -->
  <div id="loginModal">
    <div class="modal-content">
      <h3>Welcome to Connect Chat üá∫üá∏</h3>
      <form id="loginForm">
        <label for="username">Your Name <span style="color: red">*</span></label>
        <input type="text" id="username" required placeholder="Enter your name" />
        <label for="email">Email (optional)</label>
        <input type="email" id="email" placeholder="you@example.com" />
        <button type="submit">Enter Chat</button>
      </form>
    </div>
  </div>

  <header>
    <h1>Connect Inc. üóΩ</h1>
    <div class="dropdown">
      <button class="dropbtn">‚ò∞ Menu</button>
      <div class="dropdown-content">
        <a href="index.html">Home</a>
        <a href="house.html">House</a>
        <a href="senate.html">Senate</a>
